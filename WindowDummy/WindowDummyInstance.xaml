<Window x:Class="WindowDummy.WindowDummyInstance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowDummy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None" ResizeMode="CanMinimize" Background="White" Topmost="True" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid x:Name="ContentGrid">
            <Border BorderThickness="3" BorderBrush="Blue" Grid.ColumnSpan="2" Margin="0,0,0,0" />
            <Image x:Name="WindowPic" Margin="0,0,0,0" IsEnabled="False" Grid.ColumnSpan="2"/>

            <Border x:Name="Border_Top" BorderThickness="3" BorderBrush="Red" Margin="0,0,0,0" Height="30" VerticalAlignment="Top" />

        </Grid>
    </Grid>
</Window>
